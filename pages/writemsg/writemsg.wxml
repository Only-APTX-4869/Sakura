<!--logs.wxml-->
<view class="container log-list">
<image class="../index/index/userinfo-avatar" src="../index/1.jpg"></image>
<text class="welcome">{{msg}}</text>
<form bindsubmit="formSubmit" bindreset="formReset">

  <view class="viewText">
  <text class="text">好友名字</text>  
  <input class="inputText" name="userName" placeholder="请填写好友名字或暗号"/>
  <view>
  <text class="text">留言内容</text>  
  <input class="inputText" name="userMsg" placeholder="请填写留言内容"/></view></view>
<view class="SubmitView" >
  <button class="Submit" formType="submit">提交留言</button> 
</view>
</form>
</view>
